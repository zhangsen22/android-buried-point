<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/show_value"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/init_sdk"
        android:text="初始化 SDK"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/track_a_event"
        android:text="触发一个事件"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/set_value"
        android:text="设置 LoginId"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/get_value"
        android:layout_width="match_parent"
        android:text="获取 LoginId"
        android:layout_height="wrap_content"/>
    <Button
        android:id="@+id/go_to_sub_process"
        android:text="跳转到子进程"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

</LinearLayout>